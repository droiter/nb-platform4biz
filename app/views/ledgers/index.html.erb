<h2><i class="glyphicon glyphicon-pencil"> Data Maintenance</i></h2>

<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>CALENDAR</th>
      <th>STATEMENT TYPE</th>
			<th>LEDGER TYPE</th>
      <th>ACCOUNT</th>
      <th>AMOUNT</th>
      <th>CREATE AT</th>
      <th>UPDATE AT</th>
      <th width="150"</th>
    </tr>
  </thead>

  <tbody>
    <% @ledgers.each do |ledger| %>
      <tr>
        <td><%= ledger.statement.calendar.calendar_type %></td>
        <td><%= ledger.statement.statement_type.name %></td>
				<td><%= ledger.ledger_type.name %></td>
        <td><%= ledger.account %></td>
        <td><%= ledger.amount %></td>
        <td><%= ledger.created_at %></td>
        <td><%= ledger.updated_at %></td>
        <td><%= link_to 'Show', ledger, class: "btn btn-primary btn-block" %>
        <%= link_to 'Edit', edit_ledger_path(ledger), class: "btn btn-primary btn-block" %>
        <%= link_to 'Destroy', ledger, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ledger', new_ledger_path %>
