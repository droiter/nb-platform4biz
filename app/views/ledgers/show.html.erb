<h2><i class="glyphicon glyphicon-info-sign"> Show Ledgers</i></h2>

<p id="notice"><%= notice %></p>

<div class='tab'>

<table class="table table-hover">
	<caption>Ledgers Information</caption>

	<tr>
		<th>KEY</th>
		<th>VALUE</th>
	</tr>

	<tr>
		<td>CALENDAR</td>
		<td><%= @ledger.statement.calendar.calendar_type %></td>
	</tr>

	<tr>
		<td>STATEMENT TYPE</td>
		<td><%= @ledger.statement.statement_type.name %></td>
	</tr>

	<tr>
		<td>LEDGER TYPE</td>
		<td><%= @ledger.ledger_type.name %></td>
	</tr>

	<tr>
		<td>ACCOUNT</td>
		<td><%= @ledger.account %></td>
	</tr>

	<tr>
		<td>AMOUNT</td>
		<td><%= @ledger.amount %></td>
	</tr>

	<tr>
		<td>CREATED AT</td>
		<td><%= @ledger.created_at %></td>
	</tr>

	<tr>
		<td>UPDATED AT</td>
		<td><%= @ledger.updated_at %></td>
	</tr>
</table>

</div>

<%= link_to 'Edit', edit_ledger_path(@ledger) %> |
<%= link_to 'Back', ledgers_path %>


