<h2><i class="glyphicon glyphicon-calendar"> Calendar List</i></h2>

<p id="notice"><%= notice %></p>

<div class='tab'>

<table class="table table-hover">
  <thead>
    <tr>
      <th>TYPE</th>
      <th>FROM</th>
      <th>TO</th>
      <th>CREATED AT</th>
      <th>UPDATED AT</th>
			<th width ="150">ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.calendar_type %></td>
        <td><%= calendar.from %></td>
        <td><%= calendar.to %></td>
        <td><%= calendar.created_at %></td>
        <td><%= calendar.updated_at %></td>
        <td><%= link_to 'Show', calendar, class: "btn btn-primary btn-block" %>
        <%= link_to 'Edit', edit_calendar_path(calendar), class: "btn btn-primary btn-block" %>
        <%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<% if @current_user.user_type.name == 'Super User' %>
<%= link_to 'New Calendar', new_calendar_path %>
<% end %>
