<p id="notice"><%= notice %></p>

<h2><i class="glyphicon glyphicon-user"> Members List</i></h2>

<div class='tab'>

<table class="table table-hover">
  <thead>
    <tr>
			<th>MEMBER ID</th>
			<th>SCREEN NAME</th>
			<th>USER NAME</th>
			<th>ROLE</th>
			<th>STATUS</th>
			<th width="150">ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
				<td><%= user.uid %></td>
				<td><%= user.screen_name %></td>
				<td><%= user.name %></td>
				<td></td>
				<td></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
