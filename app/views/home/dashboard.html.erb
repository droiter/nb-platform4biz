		<% @organizations.each do |organization| %>
			<tr>
				<td><%= organization.name %></td>
				<td>1.0</td>
				<td>1.0</td>
				<td>1.0</td>
				<td>1.0</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>

<div id="solvency">
<table class="table table-hover">
	<thead>
		<tr>
			<th>ORGANIZATION NAME</th>
