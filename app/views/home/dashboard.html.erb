<p id="notice"><%= notice %></p>

<h2><i class="glyphicon glyphicon-list-alt"> Dashboard</i></h2>

<%= high_chart("id", @chart) %>

<%= @response %>
<%= @message %>
<%= @code %>
<%= @result %>


<h3>Overall Information</h3>

<table class="table table-hover">
  <thead>
    <tr>
			<th>ORGANIATION NAME</th>
			<th>DESCRIPTION</th>
			<th>STATUS</th>
			<th>M-SCORE / Z-SCORE</th>
			<th>MESSAGE</th>
			<th width="150">ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
				<td><%= organization.name %></td>
				<td><%= organization.description %></td>
				<td></td>
				<td>1.0 / 1.0</td>
				<td>Fine</td>
        <td><%= link_to 'Show', organization, class: 'btn btn-primary btn-block' %> 
				<%= link_to 'Comp', organization, class: 'btn btn-primary btn-block' %> 
				<%= link_to 'Time', organization, class: 'btn btn-primary btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3>Financial Ratio</h3>

<ul class="nav nav-tabs">
  <li class="active"><a href="#">Liquidity Ratio</a></li>
  <li><a href="#">Solvency Ratio</a></li>
