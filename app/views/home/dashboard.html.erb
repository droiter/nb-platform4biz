<h3>Financial Statements</h3>

<%= form_tag(home_index_path) do |f| %>
<table class="table table-hover">
	<thead>
		<tr>
			<th>ORGANIZATION NAME</th>
			<th>FISCAL YEAR</th>
			<th>QUARTER</th>
			<th width="150">ACTION</th>
		</tr>
	</thead>

	<tbody>
		<% @organizations.each do |organization| %>
			<tr>
				<td><%= organization.name %></td>
				<td><%= select_tag 'organization', options_for_select(['2016', '2015', '2014']) %></td>
				<td><%= select_tag 'organization', options_for_select(['Q1', 'Q2', 'Q3', 'Q4']) %></td>
				<td><%= submit_tag "Download", class: 'btn btn-primary btn-block' %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<% end %>

