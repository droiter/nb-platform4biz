<p id="notice"><%= notice %></p>

<h2>Members List</h2>

<table class="table table-hover">
  <thead>
    <tr>
			<th>MEMBER ID</th>
			<th>SCREEN NAME</th>
			<th>USER NAME</th>
			<th>ROLE</th>
			<th>STATUS</th>
			<th>ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
				<td><%= user.uid %></td>
				<td><%= user.screen_name %></td>
				<td><%= user.name %></td>
				<td></td>
				<td></td>
        <td><%= link_to 'Show', user, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', user, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

