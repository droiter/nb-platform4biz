<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table class="table table-hover">
		<tr>
			<th>KEY</th>
			<th>VALUE</th>
		</tr>

		<tr>
			<td>Provider</td>
			<td><%= @user.provider %></td>
		</tr>

		<tr>
			<td>User ID</td>
			<td><%= @user.uid %></td>
		</tr>

		<tr>
			<td>Screen Name</td>
			<td><%= @user.screen_name %></td>
		</tr>

		<tr>
			<td>Name</td>
			<td><%= f.text_field :name %></td>
		</tr>

		<tr>
			<td>User Type</td>
			<td><%= f.select(:user_type_id, @user_types.map{|t|[t.name,t.id]}) %>
		</tr>

		<tr>
			<td>Status</td>
			<td><%= f.select(:status_id, @statuses.map{|t|[t.name,t.id]}) %>
		</tr>
	</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
